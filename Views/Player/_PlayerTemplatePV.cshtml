@using _66bitPractice.Data.ViewModels;
@model PlayerVM

@{
	string GetTeamName(string team)
	{
		return team == null ? "Not in any team" : team;
	}
}

<tr>
	<td class="align-middle">
		<img src="@Model.PictureURL" class="rounded-circle player-face" alt="Profile Picture">
	</td>
	<td class="align-middle">@Model.Name</td>
	<td class="align-middle">@Model.Surname</td>
	<td class="align-middle">@Model.Gender</td>
	<td class="align-middle">@Model.BirthDate.ToShortDateString()</td>
	<td class="align-middle">@GetTeamName(Model.Team)</td>
	<td class="align-middle">@Model.Country</td>
	<td class="align-middle">

		<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.PlayerId"><i class="bi bi-pencil-square"></i>Edit</a>
		<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.PlayerId"><i class="bi bi-trash"></i>Delete</a>
	</td>
</tr>