@model IEnumerable<Player>
@{
    ViewData["Title"] = "Yet another Page With All Players!";

    string GetTeamName(Team team)
    {
        return team == null ? "Not in any team" : team.Name;
    }
}

<div class="text-center">
    <h1 class="display-4">Best football players</h1>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Surname @item.Name
                                        <a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@item.PlayerId">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.PictureURL" width="100%" alt="@item.Name">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text"><b>Gender: </b>@item.Gender.ToString()</p>
                                <p class="card-text"><b>Birth Date: </b>@item.BirthDate.ToString("dd MMM yyyy")</p>
                                <p class="card-text"><b>Team: </b>@GetTeamName(item.Team)</p>
                                <p class="card-text"><b>Country: </b>@item.Country</p>
                                @*<p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white">AVAILABLE</span>
                                    }
                                    else if (DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white">EXPIRED</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">UPCOMING</span>
                                    }
                                </p>*@

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    @*<a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@item.PlayerId">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>*@
                                   
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
